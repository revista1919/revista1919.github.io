{
  "name": "revista1919",
  "version": "1.0.0",
  "homepage": "https://revista1919.github.io/revista1919",
  "scripts": {
    "start": "webpack serve --open",
    "start:dev": "cross-env NODE_ENV=development webpack serve --open",
    "build": "dotenv -e .env -- webpack --mode production",
    "build:debug": "cross-env NODE_ENV=production DEBUG=true webpack --mode production --progress --verbose",
    "build:prerender": "npm run build && react-snap",
    "generate-all": "node generate-all.js",
    "generate:articles": "cross-env REBUILD_TYPE=articles node generate-all.js",
    "generate:volumes": "cross-env REBUILD_TYPE=volumes node generate-all.js",
    "generate:news": "cross-env REBUILD_TYPE=news node generate-all.js",
    "generate:team": "cross-env REBUILD_TYPE=team node generate-all.js",
    "predeploy": "npm run generate-all && npm run build:prerender",
    "deploy": "gh-pages -d dist",
    "test:build": "npm run build:prerender && echo 'âœ… Build completado!'",
    "clean": "rm -rf node_modules dist .env.local && npm ci",
    "check-size": "bash check-size.sh",
    "setup": "bash setup.sh",
    "env:check": "node scripts/check-env.js",
    "env:load": "dotenv -e .env.local -- npm start",
    "deploy:firebase": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@google-cloud/firestore": "^8.3.0",
    "@google/genai": "^1.20.0",
    "@google/generative-ai": "^0.1.3",
    "@heroicons/react": "^2.2.0",
    "@react-oauth/google": "^0.12.2",
    "@uiw/react-codemirror": "^4.25.4",
    "buffer": "^6.0.3",
    "date-fns": "^4.1.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.0.0",
    "framer-motion": "^12.23.12",
    "googleapis": "^171.4.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash": "^4.17.21",
    "lucide": "^0.563.0",
    "lucide-react": "^0.563.0",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.5.3",
    "process": "^0.11.10",
    "quill-image-resize-module-react": "^3.0.0",
    "react": "^18.2.0",
