  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "puppeteer_skip_chromium_download": true
  },
  "volta": {
    "node": "20.10.0"
  },
  "reactSnap": {
    "inlineCss": true,
    "include": [
      "/es",
      "/en"
    ]
  }
