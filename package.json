    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "autoprefixer": "^10.4.15",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^7.3.0",
    "firebase-tools": "^13.35.1",
    "gh-pages": "^6.1.1",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "react-snap": "^1.23.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
